[Unit]
Description=OpenGuard Backend API Service
After=network.target

[Service]
User=http
Group=http
WorkingDirectory=/home/discordbot/openguard/dashboard/backend
Environment="PYTHONPATH=/home/discordbot/openguard"
ExecStart=/home/discordbot/openguard/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 5030
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
